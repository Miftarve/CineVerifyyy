        .page-title {
            font-size: 2.2rem;
            font-weight: 700;
            margin-bottom: 10px;
            color: var(--text-color);
            display: flex;
            align-items: center;
            letter-spacing: -0.5px;
        }
        
        .page-title i {
            color: var(--accent-color);
        }
        
        .subtitle {
            font-size: 1.1rem;
            color: var(--text-muted);
            margin-bottom: 0;
