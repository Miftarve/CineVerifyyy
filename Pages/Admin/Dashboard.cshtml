<!-- Modal Svuota Cache -->
<div class="modal fade" id="clearCacheModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-trash me-2"></i>Svuota Cache</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="modal-icon warning">
                    <i class="bi bi-exclamation-triangle"></i>
                </div>
                <h4>Conferma svuotamento cache</h4>
                <p>Sei sicuro di voler svuotare la cache del sistema? Questa operazione potrebbe rallentare temporaneamente l'applicazione mentre la cache viene rigenerata.</p>
                
                <div class="cache-details">
                    <div class="cache-item">
                        <div class="cache-label">Cache immagini</div>
                        <div class="cache-value">124 MB</div>
                    </div>
                    <div class="cache-item">
                        <div class="cache-label">Cache API</div>
                        <div class="cache-value">38 MB</div>
                    </div>
                    <div class="cache-item">
                        <div class="cache-label">Cache applicazione</div>
                        <div class="cache-value">56 MB</div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
                <form method="post" asp-page-handler="ClearCache">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-2"></i>Svuota Cache
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Modal Importazione Film -->
<div class="modal fade" id="importModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-cloud-arrow-down me-2"></i>Importa Film</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="import-options">
                    <div class="import-option">
                        <input type="radio" name="importType" id="importPopular" value="popular" checked>
                        <label for="importPopular">
                            <div class="option-icon">
                                <i class="bi bi-graph-up"></i>
                            </div>
                            <div class="option-info">
                                <h4>Film Popolari</h4>
                                <p>Importa i film più popolari da TMDB</p>
                            </div>
                        </label>
                    </div>
                    
                    <div class="import-option">
                        <input type="radio" name="importType" id="importNew" value="new">
                        <label for="importNew">
                            <div class="option-icon">
                                <i class="bi bi-calendar-plus"></i>
                            </div>
                            <div class="option-info">
                                <h4>Nuove Uscite</h4>
                                <p>Importa i film appena usciti</p>
                            </div>
                        </label>
                    </div>
                    
                    <div class="import-option">
                        <input type="radio" name="importType" id="importCustom" value="custom">
                        <label for="importCustom">
                            <div class="option-icon">
                                <i class="bi bi-search"></i>
                            </div>
                            <div class="option-info">
                                <h4>Ricerca Specifica</h4>
                                <p>Cerca e importa film specifici</p>
                            </div>
                        </label>
                    </div>
                </div>
                
                <div class="import-settings">
                    <h4>Impostazioni importazione</h4>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="downloadPostersSwitch" checked>
                        <label class="form-check-label" for="downloadPostersSwitch">Scarica le locandine</label>
                    </div>
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="downloadBackdropsSwitch">
                        <label class="form-check-label" for="downloadBackdropsSwitch">Scarica le immagini di sfondo</label>
                    </div>
                </div>
                
                <div id="customSearchContainer" class="custom-search mt-3" style="display: none;">
                    <div class="mb-3">
                        <label for="customSearchQuery" class="form-label">Cerca film</label>
                        <div class="input-group">
                            <input type="text" class="form-control" id="customSearchQuery" placeholder="Es. Dune, Matrix, ecc.">
                            <button class="btn btn-primary" type="button">Cerca</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
                <a asp-page="/Admin/ImportMovies" class="btn btn-primary">
                    <i class="bi bi-arrow-right me-2"></i>Continua
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.9.1/dist/chart.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Inizializza i grafici
            initializeCharts();
            
            // Toggle per la visualizzazione custom search
            const importTypeRadios = document.querySelectorAll('input[name="importType"]');
            const customSearchContainer = document.getElementById('customSearchContainer');
            
            importTypeRadios.forEach(radio => {
                radio.addEventListener('change', function() {
                    if (this.value === 'custom') {
                        customSearchContainer.style.display = 'block';
                    } else {
                        customSearchContainer.style.display = 'none';
                    }
                });
            });
            
