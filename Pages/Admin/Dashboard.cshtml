@page
@model CineVerify.Pages.Admin.DashboardModel
@{
    ViewData["Title"] = "Dashboard Amministrativa";
    var currentDate = DateTime.Now.ToString("dddd, d MMMM yyyy");
}

<!-- Header della dashboard -->
<div class="dashboard-header">
    <div class="header-content">
        <div class="greeting-section">
            <h1 class="dashboard-title">
                <i class="bi bi-speedometer2 title-icon"></i> Dashboard
            </h1>
            <p class="welcome-message">
                Benvenuto, <span class="admin-name">@User.Identity.Name</span>
                <span class="date-info">@currentDate</span>
            </p>
        </div>
        <div class="action-buttons">
            <button type="button" class="btn btn-primary btn-with-icon" data-bs-toggle="modal" data-bs-target="#importModal">
                <i class="bi bi-cloud-arrow-down"></i>
                <span>Importa Film</span>
            </button>
            <div class="btn-group">
                <button type="button" class="btn btn-outline-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="bi bi-gear"></i> Azioni rapide
                </button>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#updateDataModal"><i class="bi bi-arrow-repeat me-2"></i>Aggiorna dati</a></li>
                    <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#settingsModal"><i class="bi bi-sliders me-2"></i>Impostazioni</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item text-danger" href="#" data-bs-toggle="modal" data-bs-target="#clearCacheModal"><i class="bi bi-trash me-2"></i>Svuota cache</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Pannello statistico principale -->
<div class="dashboard-stats-panel">
    <div class="stat-card">
        <div class="stat-icon movies">
            <i class="bi bi-film"></i>
        </div>
        <div class="stat-details">
            <h2>@Model.TotalMovies</h2>
            <p>Film nel database</p>
        </div>
        <div class="stat-chart">
            <canvas id="moviesChart" width="60" height="35"></canvas>
        </div>
        <div class="stat-footer">
            @{
                // Simulo un dato che in realtà verrebbe dal Model
                var moviesThisWeek = 12;
            }
            <span class="trend positive">
                <i class="bi bi-arrow-up-right"></i> @moviesThisWeek nuovi questa settimana
            </span>
        </div>
    </div>

    <div class="stat-card">
        <div class="stat-icon users">
            <i class="bi bi-people"></i>
        </div>
        <div class="stat-details">
            <h2>@Model.TotalUsers</h2>
            <p>Utenti registrati</p>
        </div>
        <div class="stat-chart">
            <canvas id="usersChart" width="60" height="35"></canvas>
        </div>
        <div class="stat-footer">
            @{
                // Simulo un dato che in realtà verrebbe dal Model
                var newUsers = 8;
            }
            <span class="trend positive">
                <i class="bi bi-arrow-up-right"></i> @newUsers nuovi questa settimana
            </span>
        </div>
    </div>

    <div class="stat-card">
        <div class="stat-icon reviews">
            <i class="bi bi-star"></i>
        </div>
        <div class="stat-details">
            <h2>@Model.TotalReviews</h2>
            <p>Recensioni totali</p>
        </div>
        <div class="stat-chart">
            <canvas id="reviewsChart" width="60" height="35"></canvas>
        </div>
        <div class="stat-footer">
            @{
                // Simulo un dato che in realtà verrebbe dal Model
                var reviewsThisWeek = 28;
            }
            <span class="trend positive">
                <i class="bi bi-arrow-up-right"></i> @reviewsThisWeek nuove questa settimana
            </span>
        </div>
    </div>

    <div class="stat-card">
        <div class="stat-icon genres">
            <i class="bi bi-tags"></i>
        </div>
        <div class="stat-details">
            <h2>@Model.TotalGenres</h2>
            <p>Generi disponibili</p>
        </div>
        <div class="stat-chart">
            <div class="genre-distribution">
                <div class="genre-bar" style="height: 80%;" title="Azione"></div>
                <div class="genre-bar" style="height: 65%;" title="Commedia"></div>
                <div class="genre-bar" style="height: 50%;" title="Drammatico"></div>
                <div class="genre-bar" style="height: 40%;" title="Fantascienza"></div>
                <div class="genre-bar" style="height: 60%;" title="Horror"></div>
            </div>
        </div>
        <div class="stat-footer">
            <a href="#genreDistribution" class="view-details">
                <i class="bi bi-pie-chart"></i> Vedi distribuzione
            </a>
        </div>
    </div>
</div>

<div class="dashboard-grid">
    <!-- Grafico principale -->
    <div class="dashboard-card full-width">
        <div class="card-header">
            <h3><i class="bi bi-graph-up me-2"></i>Panoramica Attività</h3>
            <div class="card-actions">
                <div class="btn-group">
                    <button type="button" class="btn btn-sm btn-outline-secondary active period-selector" data-period="week">Settimana</button>
                    <button type="button" class="btn btn-sm btn-outline-secondary period-selector" data-period="month">Mese</button>
                    <button type="button" class="btn btn-sm btn-outline-secondary period-selector" data-period="year">Anno</button>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="chart-container">
                <canvas id="activityChart" height="250"></canvas>
            </div>
        </div>
    </div>
    
    <!-- Gestione Film e Operazioni Film -->
    <div class="dashboard-card">
        <div class="card-header">
            <h3><i class="bi bi-film me-2"></i>Gestione Film</h3>
            <div class="card-actions">
                <a href="#" class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#importModal">
                    <i class="bi bi-cloud-arrow-down me-1"></i> Importa
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="status-section">
                <div class="status-item">
                    @{
                        var verifiedMovies = Model.TotalMovies * 0.8;
                        var verifiedPercentage = Model.TotalMovies > 0 ? (verifiedMovies / Model.TotalMovies * 100) : 0;
                    }
                    <div class="status-info">
                        <h4>Film verificati</h4>
                        <p>@verifiedMovies.ToString("0") / @Model.TotalMovies</p>
                    </div>
                    <div class="status-progress">
                        <div class="progress">
                            <div class="progress-bar bg-success" role="progressbar" style="width: @verifiedPercentage%"></div>
                        </div>
                        <span>@verifiedPercentage.ToString("0.0")%</span>
                    </div>
                </div>
                
                <div class="status-item">
                    @{
                        var moviesWithTrailers = Model.TotalMovies * 0.6;
                        var trailerPercentage = Model.TotalMovies > 0 ? (moviesWithTrailers / Model.TotalMovies * 100) : 0;
                    }
                    <div class="status-info">
                        <h4>Con trailer</h4>
                        <p>@moviesWithTrailers.ToString("0") / @Model.TotalMovies</p>
                    </div>
                    <div class="status-progress">
                        <div class="progress">
                            <div class="progress-bar bg-info" role="progressbar" style="width: @trailerPercentage%"></div>
                        </div>
                        <span>@trailerPercentage.ToString("0.0")%</span>
                    </div>
                </div>
                
                <div class="status-item">
                    @{
                        var moviesWithoutPlot = Model.TotalMovies * 0.15;
                        var withoutPlotPercentage = Model.TotalMovies > 0 ? (moviesWithoutPlot / Model.TotalMovies * 100) : 0;
                    }
                    <div class="status-info">
                        <h4>Senza trama</h4>
                        <p>@moviesWithoutPlot.ToString("0") / @Model.TotalMovies</p>
                    </div>
                    <div class="status-progress">
                        <div class="progress">
                            <div class="progress-bar bg-warning" role="progressbar" style="width: @withoutPlotPercentage%"></div>
                        </div>
                        <span>@withoutPlotPercentage.ToString("0.0")%</span>
                    </div>
                </div>
            </div>
            
            <div class="action-buttons-group">
                <a asp-page="/Movies/Index" class="btn btn-primary btn-block">
                    <i class="bi bi-list me-2"></i>Gestisci Film
                </a>
            </div>
        </div>
    </div>
    
    <!-- Gestione Utenti -->
    <div class="dashboard-card">
        <div class="card-header">
            <h3><i class="bi bi-people me-2"></i>Gestione Utenti</h3>
            <div class="card-actions">
                <a href="#" class="btn btn-sm btn-outline-success" data-bs-toggle="modal" data-bs-target="#addUserModal">
                    <i class="bi bi-person-plus me-1"></i> Nuovo
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="user-distribution">
                <canvas id="userRolesChart" height="180"></canvas>
            </div>
            
            <div class="user-counts mt-3">
                <div class="count-item">
                    @{
                        // Simulo dati che in realtà verrebbero dal Model
                        var adminCount = 3;
                    }
                    <div class="count-icon admin">
                        <i class="bi bi-shield"></i>
                    </div>
                    <div class="count-info">
                        <span class="count-value">@adminCount</span>
                        <span class="count-label">Admin</span>
                    </div>
                </div>
                
                <div class="count-item">
                    @{
                        var criticCount = 12;
                    }
                    <div class="count-icon critic">
                        <i class="bi bi-star"></i>
                    </div>
                    <div class="count-info">
                        <span class="count-value">@criticCount</span>
                        <span class="count-label">Critici</span>
                    </div>
                </div>
                
                <div class="count-item">
                    @{
                        var regularUserCount = Model.TotalUsers - adminCount - criticCount;
                    }
                    <div class="count-icon user">
                        <i class="bi bi-person"></i>
                    </div>
                    <div class="count-info">
                        <span class="count-value">@regularUserCount</span>
                        <span class="count-label">Utenti</span>
                    </div>
                </div>
            </div>
            
            <div class="action-buttons-group">
                <a asp-page="/Admin/Users" class="btn btn-success btn-block">
                    <i class="bi bi-people me-2"></i>Gestisci Utenti
                </a>
                <a asp-page="/Admin/Roles" class="btn btn-outline-success btn-block">
                    <i class="bi bi-shield me-2"></i>Gestisci Ruoli
                </a>
            </div>
        </div>
    </div>
    
    <!-- Recensioni Recenti -->
