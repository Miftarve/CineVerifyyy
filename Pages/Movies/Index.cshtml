                height: 35px;
                top: 40%;
                left: 80%;
                animation-duration: 25s;
                animation-delay: 2s;
                opacity: 0.1;
            }

            .particle:nth-child(4) {
                width: 20px;
                height: 20px;
                top: 20%;
                left: 60%;
                animation-duration: 22s;
                animation-delay: 0.5s;
                opacity: 0.2;
            }

            .particle:nth-child(5) {
                width: 30px;
                height: 30px;
                top: 80%;
                left: 50%;
                animation-duration: 21s;
                animation-delay: 3s;
                opacity: 0.15;
            }

            .particle:nth-child(6) {
                width: 15px;
                height: 15px;
                top: 30%;
                left: 30%;
                animation-duration: 19s;
                animation-delay: 2s;
                opacity: 0.2;
            }

            .particle:nth-child(7) {
                width: 22px;
                height: 22px;
                top: 60%;
                left: 70%;
                animation-duration: 24s;
                animation-delay: 1.5s;
                opacity: 0.1;
            }

            .particle:nth-child(8) {
                width: 18px;
                height: 18px;
                top: 50%;
                left: 40%;
                animation-duration: 23s;
                animation-delay: 0s;
                opacity: 0.15;
            }

            .particle:nth-child(9) {
                width: 28px;
                height: 28px;
                top: 25%;
                left: 85%;
                animation-duration: 26s;
                animation-delay: 2.5s;
                opacity: 0.2;
            }

            .particle:nth-child(10) {
                width: 32px;
                height: 32px;
                top: 75%;
