        }

        .category-chips {
            display: flex;
            flex-wrap: wrap;
            gap: 1rem;
            margin-bottom: 2rem;
        }

        .category-chip {
            display: flex;
            align-items: center;
            padding: 0.6rem 1.2rem;
            background-color: white;
