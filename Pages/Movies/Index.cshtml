            --rating-color: #ffc107;
            --verified-color: #4cc9f0;
        }

        body {
            background-color: var(--background-color);
        }

        /* Hero Section */
        .movie-hero-section {
            background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.8)), url('/images/cinema-background.jpg');
