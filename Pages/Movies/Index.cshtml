            background-position: center;
            padding: 4rem 0;
            margin-bottom: 2rem;
            color: white;
            position: relative;
            overflow: hidden;
        }

        .hero-title {
            font-weight: 700;
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.4);
            margin-bottom: 1rem;
            animation: fadeInUp 1s ease-out;
        }

        .hero-subtitle {
            max-width: 800px;
            margin: 0 auto 2rem;
            font-weight: 300;
            opacity: 0.9;
            animation: fadeInUp 1s ease-out 0.3s;
            animation-fill-mode: both;
        }

        /* Animated Particles */
        .particles-container {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: 1;
        }

        .hero-content {
            position: relative;
            z-index: 2;
        }

        .particle {
            position: absolute;
            border-radius: 50%;
            background-color: rgba(255, 255, 255, 0.3);
            pointer-events: none;
            animation: float 15s infinite linear;
        }

            .particle:nth-child(1) {
                width: 40px;
                height: 40px;
                top: 10%;
                left: 10%;
                animation-duration: 20s;
                animation-delay: 0s;
                opacity: 0.2;
            }

            .particle:nth-child(2) {
