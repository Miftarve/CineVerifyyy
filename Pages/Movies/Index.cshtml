            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 0.5rem;
            margin-top: 0.5rem;
        }

        .overlay-genre-pill {
            background: rgba(255, 255, 255, 0.2);
            border-radius: 20px;
            padding: 0.2rem 0.7rem;
            font-size: 0.75rem;
            white-space: nowrap;
        }

        /* Movie Info */
        .movie-info {
