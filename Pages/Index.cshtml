@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

@if (ViewData.ContainsKey("Debug"))
{
    <div class="alert alert-info mt-3">
        <strong>Debug:</strong> @ViewData["Debug"]
    </div>
}

<!-- Hero Banner Migliorato -->
<div class="hero-section">
    <div class="hero-background">
        <div class="hero-overlay"></div>
    </div>
    <div class="container position-relative">
        <div class="row">
            <div class="col-lg-7">
                <div class="hero-content" data-aos="fade-right">
                    <h1 class="hero-title">La tua esperienza <br><span class="text-highlight">cinematografica</span> evoluta</h1>
                    <p class="hero-subtitle">Esplora, scopri e verifica i migliori contenuti cinematografici con intelligenza artificiale</p>
                    <div class="hero-buttons">
                        <a asp-page="/Movies/Index" class="btn btn-primary btn-lg hero-btn pulse-btn">
                            <i class="bi bi-film me-2"></i>Esplora Film
                        </a>
                        <a asp-page="/Movies/AdvancedSearch" class="btn btn-outline-light btn-lg hero-btn">
                            <i class="bi bi-search me-2"></i>Ricerca Avanzata
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-5 d-none d-lg-block">
                <div class="hero-floating-cards">
                    <div class="floating-card card-1" data-aos="fade-up" data-aos-delay="200"></div>
                    <div class="floating-card card-2" data-aos="fade-up" data-aos-delay="300"></div>
                    <div class="floating-card card-3" data-aos="fade-up" data-aos-delay="400"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container main-content">
    <!-- Stats Counters -->
    <div class="stats-container" data-aos="fade-up">
        <div class="row g-4">
            <div class="col-6 col-md-3">
                <div class="stat-card">
                    <div class="stat-icon"><i class="bi bi-film"></i></div>
                    <div class="stat-number">@(Model.LatestMovies.Count() + Model.TopRatedMovies.Count())</div>
                    <div class="stat-label">Film Totali</div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="stat-card">
                    <div class="stat-icon"><i class="bi bi-star"></i></div>
                    <div class="stat-number">@Model.TopRatedMovies.Max(m => m.Rating).ToString("0.0")</div>
                    <div class="stat-label">Rating Massimo</div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="stat-card">
                    <div class="stat-icon"><i class="bi bi-calendar-check"></i></div>
                    <div class="stat-number">@DateTime.Now.Year</div>
                    <div class="stat-label">Anno Corrente</div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="stat-card">
                    <div class="stat-icon"><i class="bi bi-patch-check"></i></div>
                    <div class="stat-number">@Model.TopRatedMovies.Count(m => m.IsVerified)</div>
                    <div class="stat-label">Film Verificati</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Film Più Recenti -->
    <div class="section" data-aos="fade-up">
        <div class="section-header">
            <div class="section-title-group">
                <h2 class="section-title"><i class="bi bi-calendar-check"></i>Film Più Recenti</h2>
                <div class="section-line"></div>
            </div>
            <a asp-page="/Movies/Index" class="section-link">
                <span>Vedi tutti</span>
                <i class="bi bi-chevron-right"></i>
            </a>
        </div>

        <div class="movies-slider">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4 mb-5">
                @foreach (var movie in Model.LatestMovies)
                {
                    <div class="col">
                        <div class="movie-card" data-aos="fade-up" data-aos-delay="@(Model.LatestMovies.ToList().IndexOf(movie) * 100)">
                            <div class="movie-poster">
                                @if (!string.IsNullOrEmpty(movie.PosterPath))
                                {
                                    <img src="@movie.PosterPath" alt="@movie.Title" class="movie-poster-img" loading="lazy" />
                                }
                                else
                                {
                                    <div class="no-poster">
                                        <i class="bi bi-film"></i>
                                        <span>No Poster</span>
                                    </div>
                                }
                                <div class="movie-rating">
                                    <i class="bi bi-star-fill"></i>
                                    <span>@movie.Rating.ToString("0.0")</span>
                                </div>

                                <div class="movie-overlay">
                                    <div class="movie-overlay-content">
                                        @if (movie.Id > 0)
                                        {
                                            <a asp-page="/Movies/Details" asp-route-id="@movie.Id" class="overlay-btn">
                                                <i class="bi bi-eye"></i>
                                                <span>Dettagli</span>
                                            </a>
                                        }
                                        else if (movie.TmdbId > 0)
                                        {
                                            <form method="post" asp-page-handler="ImportAndView">
                                                <input type="hidden" name="tmdbId" value="@movie.TmdbId" />
                                                <button type="submit" class="overlay-btn">
                                                    <i class="bi bi-eye"></i>
                                                    <span>Visualizza</span>
                                                </button>
                                            </form>
                                        }

                                        <div class="overlay-genres">
                                            @if (movie.Genres != null && movie.Genres.Length > 0)
                                            {
                                                foreach (var genre in movie.Genres.Take(3))
                                                {
                                                    <span class="overlay-genre">@genre</span>
                                                }
                                            }
                                        </div>

                                        @if (!string.IsNullOrEmpty(movie.Description) && movie.Description.Length > 100)
                                        {
                                            <div class="overlay-description">
                                                @(movie.Description.Substring(0, 100) + "...")
                                            </div>
                                        }
                                        else if (!string.IsNullOrEmpty(movie.Description))
                                        {
                                            <div class="overlay-description">
                                                @movie.Description
                                            </div>
                                        }
                                    </div>
                                </div>

                                @if (movie.Id == 0 && movie.TmdbId > 0)
                                {
                                    <div class="movie-source">
                                        <i class="bi bi-cloud"></i>
                                        <span>TMDB</span>
                                    </div>
                                }
                            </div>
                            <div class="movie-info">
                                <h5 class="movie-title" title="@movie.Title">
                                    @if (movie.Id > 0)
                                    {
                                        <a asp-page="/Movies/Details" asp-route-id="@movie.Id">@movie.Title</a>
                                    }
                                    else
                                    {
                                        @movie.Title
                                    }

                                    @if (movie.IsVerified)
                                    {
                                        <span class="verified-badge" title="Film verificato"><i class="bi bi-patch-check-fill"></i></span>
                                    }
                                </h5>
                                <div class="movie-meta">
                                    <div class="meta-item">
                                        <i class="bi bi-calendar3"></i>
                                        <span>@(movie.ReleaseDate?.Year.ToString() ?? "N/A")</span>
                                    </div>
                                    @if (movie.Genres != null && movie.Genres.Length > 0)
                                    {
                                        <div class="meta-item">
                                            <i class="bi bi-tag"></i>
                                            <span>@movie.Genres[0]</span>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

